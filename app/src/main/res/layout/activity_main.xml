<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:id="@+id/ll_topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/border_bottom_grey">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/scTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvTheme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="LIGHT"
                android:textSize="15sp"
                android:padding="5dp"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/DarkYellow"/>
            <TextView
                android:id="@+id/tvLogOut"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_weight=".3"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical|end"
                android:paddingEnd="10dp"
                android:text="@string/log_out"
                android:textColor="@color/link_text_color"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_topBar"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph_main" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <com.etebarian.meowbottomnavigation.MeowBottomNavigation
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            app:mbn_backgroundBottomColor="@color/white"
            app:mbn_circleColor="@color/white"
            app:mbn_defaultIconColor="#90a4ae"
            app:mbn_selectedIconColor="#CFA00F"
            app:mbn_shadowColor="#1f212121" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>